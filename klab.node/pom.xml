	<artifactId>klab.node</artifactId>
	<name>k.LAB node server</name>
	<build>
		<plugins>
			<plugin>
				<groupId>com.google.cloud.tools</groupId>
				<artifactId>jib-maven-plugin</artifactId>
				<configuration>
					<from>
						<image>${env.REGISTRY}/${env.BASE_CONTAINER}</image>
						<auth>
							<username>${env.USERNAME}</username>
							<password>${env.PASSWORD}</password>
						</auth>
					</from>
					<to>
						<image>${env.REGISTRY}/${env.NODE_CONTAINER}</image>
						<tags>
							<tag>${env.TAG}</tag>
							<tag>${env.CURRENT_COMMIT}</tag>
						</tags>
						<auth>
							<username>${env.USERNAME}</username>
							<password>${env.PASSWORD}</password>
						</auth>
					</to>
					<container>
						<expandClasspathDependencies>true</expandClasspathDependencies>
						<user>klab:klab</user>
						<jvmFlags>${jib.jvmFlags}</jvmFlags>
						<mainClass>org.integratedmodelling.klab.node.NodeApplication</mainClass>
						<args></args>
						<ports>
							<port>8287</port>
						</ports>
						<labels></labels>
					</container>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
				<version>${spring-boot.version}</version>
				<configuration>
					<fork>true</fork>
					<mainClass>org.integratedmodelling.klab.node.NodeApplication</mainClass>
				</configuration>
				<executions>
					<execution>
						<goals>
							<goal>repackage</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
