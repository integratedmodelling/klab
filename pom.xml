<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.integratedmodelling</groupId>
	<artifactId>klab</artifactId>
	<version>0.10.0-SNAPSHOT</version>
	<packaging>pom</packaging>
	
	<modules>
		<module>kdl</module>
		<module>kim</module>
		<module>klab.core</module>
		<module>klab.engine</module>
		<module>klab.tools</module>
	</modules>

	<properties>
	
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
		<java.version>1.8</java.version>
		<!-- Careful here: geotools must be right for jgrasstools to work; JTS 
			should be the same one that geotools needs. -->
		<geotools.version>19-SNAPSHOT</geotools.version>
		<klab.version>0.10.0-SNAPSHOT</klab.version>
		<jgrasstools-version>0.8.1</jgrasstools-version>
		<jts.version>1.13</jts.version>
		<h2gis.version>1.2.4</h2gis.version>
		<maven.compiler.source>1.8</maven.compiler.source>
		<maven.compiler.target>1.8</maven.compiler.target>

		<tycho-version>1.0.0</tycho-version>
		<xtextVersion>2.12.0</xtextVersion>
		
		<!-- the five below go together. Never change one without checking the 
			others -->
		<spring-boot-version>1.4.2.RELEASE</spring-boot-version>
		<spring-ldap-version>4.2.0.RELEASE</spring-ldap-version>
		<spring-version>4.3.4.RELEASE</spring-version>
		<junit-version>4.12</junit-version>
		<jackson-version>2.8.5</jackson-version>
		<!-- end versions that need to be in lock-step to avoid multiple Spring 
			issues -->

		<joda-time-version>2.3</joda-time-version>
		<javax.mail-api.version>1.5.2</javax.mail-api.version>
	</properties>

	<repositories>
		<repository>
			<id>osgeo</id>
			<name>Open Source Geospatial Foundation Repository</name>
			<url>http://download.osgeo.org/webdav/geotools/</url>
		</repository>
		<repository>
			<id>im</id>
			<name>Integrated Modelling Partnership Repository</name>
			<url>http://www.integratedmodelling.org/nexus/content/repositories/releases/</url>
		</repository>
		<repository>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
			<id>boundless</id>
			<name>Boundless Maven Repository</name>
			<url>http://repo.boundlessgeo.com/main</url>
		</repository>
	</repositories>

	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-compiler-plugin</artifactId>
					<!-- 2.8.0-01 and later require maven-compiler-plugin 3.1 or higher -->
					<version>3.1</version>
					<configuration>
						<compilerId>groovy-eclipse-compiler</compilerId>
						<source>1.8</source>
						<target>1.8</target>
					</configuration>
					<dependencies>
						<dependency>
							<groupId>org.codehaus.groovy</groupId>
							<artifactId>groovy-eclipse-compiler</artifactId>
							<version>2.9.2-01</version>
						</dependency>
						<!-- for 2.8.0-01 and later you must have an explicit dependency on 
							groovy-eclipse-batch -->
						<dependency>
							<groupId>org.codehaus.groovy</groupId>
							<artifactId>groovy-eclipse-batch</artifactId>
							<version>2.4.3-01</version>
							<!-- or choose a different compiler version -->
							<!-- <version>1.8.6-01</version> -->
							<!-- <version>1.7.10-06</version> -->
						</dependency>
					</dependencies>
				</plugin>
			</plugins>
		</pluginManagement>
		<plugins>
			<!--  <plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<version>2.10.3</version>
				<configuration>
					<additionalparam>-Xdoclint:none</additionalparam>
					<excludePackageNames>com.elet.dragonconsole.*:org.integratedmodelling.common.utils.jtopas.*</excludePackageNames>
				</configuration>
				<executions>
					<execution>
						<id>attach-javadocs</id>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>  -->
		</plugins>
	</build>

	<dependencies>

		<!-- COMMON DEPENDENCIES -->
		<!-- language support
		<dependency>
			<groupId>org.integratedmodelling</groupId>
			<artifactId>org.integratedmodelling.kim</artifactId>
			<version>0.10.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.integratedmodelling</groupId>
			<artifactId>org.integratedmodelling.kdl</artifactId>
			<version>0.10.0-SNAPSHOT</version>
		</dependency>  -->



		<!-- ENGINE DEPENDENCIES -->


